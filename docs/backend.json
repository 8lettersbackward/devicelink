
{
  "entities": {
    "Device": {
      "title": "Device",
      "description": "A registered hardware device.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["online", "offline", "error"] },
        "ownerId": { "type": "string" },
        "type": { "type": "string" },
        "registeredAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "ownerId", "status"]
    },
    "Notification": {
      "title": "Notification",
      "description": "System or device notification.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "message": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "message", "read"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Extended user information.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string" },
        "avatarUrl": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data."
    },
    "/users/{userId}/devices/{deviceId}": {
      "schema": "Device",
      "description": "Collection of devices owned by a user."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": "Notification",
      "description": "User notifications."
    }
  }
}
