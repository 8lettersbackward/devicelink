
{
  "entities": {
    "Device": {
      "title": "Safety Device",
      "description": "A registered emergency or safety hardware device.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["online", "offline", "error"] },
        "ownerId": { "type": "string" },
        "type": { "type": "string" },
        "category": { "type": "string", "enum": ["buddy", "node"] },
        "specialData": { "type": "string", "description": "Additional custom data for 'Other' type safety equipment." },
        "registeredAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "ownerId", "status", "category"]
    },
    "Notification": {
      "title": "Safety Alert",
      "description": "Emergency or safety system notification.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "message": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "message", "read"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Personal safety identification and emergency contact details.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string" },
        "avatarUrl": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Emergency responder contact info."
    },
    "/users/{userId}/devices/{deviceId}": {
      "schema": "Device",
      "description": "Safety devices registered to a user."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": "Notification",
      "description": "Personal safety alert history."
    }
  }
}
