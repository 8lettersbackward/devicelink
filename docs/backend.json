
{
  "entities": {
    "Device": {
      "title": "Safety Device / Buddy",
      "description": "A registered emergency or safety hardware device or a human buddy.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["online", "offline", "error"] },
        "ownerId": { "type": "string" },
        "type": { "type": "string", "description": "The specific type or relationship of the asset." },
        "category": { "type": "string", "enum": ["buddy", "node"] },
        "phoneNumber": { "type": "string", "description": "Contact number for human buddies." },
        "role": { "type": "string", "description": "The safety role of the buddy, e.g., Primary Emergency Contact." },
        "priority": { "type": "string", "enum": ["Low", "Medium", "High"], "description": "The alert priority for this contact." },
        "group": { "type": "string", "enum": ["Family", "Friend", "Close Friend", "Segurulo", "Others"], "description": "The safety group classification for buddies." },
        "alertGroups": { "type": "array", "items": { "type": "string" }, "description": "The buddy groups alerted by this node." },
        "specialData": { "type": "string", "description": "Additional custom data for 'Others' group or specific safety info." },
        "registeredAt": { "type": "string", "format": "date-time" },
        "lastActiveAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "ownerId", "status", "category"]
    },
    "Notification": {
      "title": "Safety Alert",
      "description": "Emergency or safety system notification.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "message": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "message", "read"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Personal safety identification and emergency contact details.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string" },
        "avatarUrl": { "type": "string" },
        "latitude": { "type": "number" },
        "longitude": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Emergency responder contact info."
    },
    "/users/{userId}/devices/{deviceId}": {
      "schema": "Device",
      "description": "Safety devices or buddies registered to a user."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": "Notification",
      "description": "Personal safety alert history."
    }
  }
}
